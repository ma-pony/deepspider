{
  "name": "deepspider",
  "version": "0.3.2",
  "description": "智能爬虫工程平台 - 基于 DeepAgents + Patchright 的 AI 爬虫 Agent",
  "type": "module",
  "main": "src/index.js",
  "files": [
    "bin/",
    "src/",
    "requirements-crypto.txt",
    ".env.example"
  ],
  "bin": {
    "deepspider": "./bin/cli.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "cli": "node bin/cli.js",
    "mcp": "node src/mcp/server.js",
    "agent": "node bin/cli.js",
    "test": "node --test 'test/*.test.js'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "setup:crypto": "uv venv .venv --python 3.11 2>/dev/null || true && uv pip install -r requirements-crypto.txt",
    "postinstall": "patchright install chromium && npm rebuild isolated-vm 2>/dev/null || true",
    "prepare": "husky"
  },
  "keywords": [
    "crawler",
    "web-scraping",
    "javascript",
    "reverse-engineering",
    "deobfuscation",
    "captcha",
    "anti-detect",
    "automation"
  ],
  "author": "pony-ma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ma-pony/deepspider.git"
  },
  "homepage": "https://github.com/ma-pony/deepspider#readme",
  "bugs": {
    "url": "https://github.com/ma-pony/deepspider/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@babel/generator": "^7.28.6",
    "@babel/parser": "^7.28.6",
    "@babel/traverse": "^7.28.6",
    "@babel/types": "^7.28.6",
    "@langchain/anthropic": "^1.3.17",
    "@langchain/core": "^1.1.24",
    "@langchain/langgraph": "^1.1.2",
    "@langchain/openai": "^1.2.3",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "crypto-js": "^4.2.0",
    "deepagents": "^1.7.6",
    "dotenv": "^17.2.3",
    "hono": "4.11.10",
    "isolated-vm": "^6.0.2",
    "js-md5": "^0.8.3",
    "js-sha256": "^0.11.1",
    "jsencrypt": "^3.5.4",
    "langchain": "^1.2.24",
    "marked": "^17.0.1",
    "patchright": "^1.57.0",
    "sm-crypto": "^0.4.0",
    "webcrack": "^2.15.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
