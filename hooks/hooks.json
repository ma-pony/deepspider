{
  "description": "JSForge Plugin 调试 Hooks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__jsforge__.*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/log-tool.sh pre",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__jsforge__.*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/log-tool.sh post",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "mcp__jsforge__.*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/log-tool.sh error",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
